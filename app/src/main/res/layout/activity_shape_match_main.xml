            </GridLayout>

        </FrameLayout>

        <!-- Bottom Grid (6x6) with dark blue border -->
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_match_grid_border"
            android:padding="1dp"
            android:layout_marginBottom="8dp">

            <GridLayout
                android:id="@+id/rightGrid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:columnCount="6"
                android:rowCount="6"
                android:background="@android:color/transparent">

                <!-- Row 0 -->
                <ImageView android:id="@+id/rightCell_0_0" android:layout_width="40dp" android:layout_height="40dp" android:layout_margin="1dp" android:scaleType="fitCenter" android:background="@drawable/shape_match_cell_bg" android:padding="3dp" />
                <ImageView android:id="@+id/rightCell_0_1" android:layout_width="40dp" android:layout_height="40dp" android:layout_margin="1dp" android:scaleType="fitCenter" android:background="@drawable/shape_match_cell_bg" android:padding="3dp" />
