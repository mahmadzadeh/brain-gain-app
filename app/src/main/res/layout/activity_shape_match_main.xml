                <ImageView android:id="@+id/rightCell_0_5" android:layout_width="40dp" android:layout_height="40dp" android:layout_margin="1dp" android:scaleType="fitCenter" android:background="@drawable/shape_match_cell_bg" android:padding="3dp" />

                <!-- Row 1 -->
                <ImageView android:id="@+id/rightCell_1_0" android:layout_width="40dp" android:layout_height="40dp" android:layout_margin="1dp" android:scaleType="fitCenter" android:background="@drawable/shape_match_cell_bg" android:padding="3dp" />
                <ImageView android:id="@+id/rightCell_1_1" android:layout_width="40dp" android:layout_height="40dp" android:layout_margin="1dp" android:scaleType="fitCenter" android:background="@drawable/shape_match_cell_bg" android:padding="3dp" />
                <ImageView android:id="@+id/rightCell_1_2" android:layout_width="40dp" android:layout_height="40dp" android:layout_margin="1dp" android:scaleType="fitCenter" android:background="@drawable/shape_match_cell_bg" android:padding="3dp" />
                <ImageView android:id="@+id/rightCell_1_3" android:layout_width="40dp" android:layout_height="40dp" android:layout_margin="1dp" android:scaleType="fitCenter" android:background="@drawable/shape_match_cell_bg" android:padding="3dp" />
                <ImageView android:id="@+id/rightCell_1_4" android:layout_width="40dp" android:layout_height="40dp" android:layout_margin="1dp" android:scaleType="fitCenter" android:background="@drawable/shape_match_cell_bg" android:padding="3dp" />
                <ImageView android:id="@+id/rightCell_1_5" android:layout_width="40dp" android:layout_height="40dp" android:layout_margin="1dp" android:scaleType="fitCenter" android:background="@drawable/shape_match_cell_bg" android:padding="3dp" />

                <!-- Row 2 -->
                <ImageView android:id="@+id/rightCell_2_0" android:layout_width="40dp" android:layout_height="40dp" android:layout_margin="1dp" android:scaleType="fitCenter" android:background="@drawable/shape_match_cell_bg" android:padding="3dp" />
                <ImageView android:id="@+id/rightCell_2_1" android:layout_width="40dp" android:layout_height="40dp" android:layout_margin="1dp" android:scaleType="fitCenter" android:background="@drawable/shape_match_cell_bg" android:padding="3dp" />
                <ImageView android:id="@+id/rightCell_2_2" android:layout_width="40dp" android:layout_height="40dp" android:layout_margin="1dp" android:scaleType="fitCenter" android:background="@drawable/shape_match_cell_bg" android:padding="3dp" />
                <ImageView android:id="@+id/rightCell_2_3" android:layout_width="40dp" android:layout_height="40dp" android:layout_margin="1dp" android:scaleType="fitCenter" android:background="@drawable/shape_match_cell_bg" android:padding="3dp" />
                <ImageView android:id="@+id/rightCell_2_4" android:layout_width="40dp" android:layout_height="40dp" android:layout_margin="1dp" android:scaleType="fitCenter" android:background="@drawable/shape_match_cell_bg" android:padding="3dp" />
                <ImageView android:id="@+id/rightCell_2_5" android:layout_width="40dp" android:layout_height="40dp" android:layout_margin="1dp" android:scaleType="fitCenter" android:background="@drawable/shape_match_cell_bg" android:padding="3dp" />

                <!-- Row 3 -->
                <ImageView android:id="@+id/rightCell_3_0" android:layout_width="40dp" android:layout_height="40dp" android:layout_margin="1dp" android:scaleType="fitCenter" android:background="@drawable/shape_match_cell_bg" android:padding="3dp" />
                <ImageView android:id="@+id/rightCell_3_1" android:layout_width="40dp" android:layout_height="40dp" android:layout_margin="1dp" android:scaleType="fitCenter" android:background="@drawable/shape_match_cell_bg" android:padding="3dp" />
                <ImageView android:id="@+id/rightCell_3_2" android:layout_width="40dp" android:layout_height="40dp" android:layout_margin="1dp" android:scaleType="fitCenter" android:background="@drawable/shape_match_cell_bg" android:padding="3dp" />
                <ImageView android:id="@+id/rightCell_3_3" android:layout_width="40dp" android:layout_height="40dp" android:layout_margin="1dp" android:scaleType="fitCenter" android:background="@drawable/shape_match_cell_bg" android:padding="3dp" />
                <ImageView android:id="@+id/rightCell_3_4" android:layout_width="40dp" android:layout_height="40dp" android:layout_margin="1dp" android:scaleType="fitCenter" android:background="@drawable/shape_match_cell_bg" android:padding="3dp" />
                <ImageView android:id="@+id/rightCell_3_5" android:layout_width="40dp" android:layout_height="40dp" android:layout_margin="1dp" android:scaleType="fitCenter" android:background="@drawable/shape_match_cell_bg" android:padding="3dp" />

                <!-- Row 4 -->
                <ImageView android:id="@+id/rightCell_4_0" android:layout_width="40dp" android:layout_height="40dp" android:layout_margin="1dp" android:scaleType="fitCenter" android:background="@drawable/shape_match_cell_bg" android:padding="3dp" />
                <ImageView android:id="@+id/rightCell_4_1" android:layout_width="40dp" android:layout_height="40dp" android:layout_margin="1dp" android:scaleType="fitCenter" android:background="@drawable/shape_match_cell_bg" android:padding="3dp" />
                <ImageView android:id="@+id/rightCell_4_2" android:layout_width="40dp" android:layout_height="40dp" android:layout_margin="1dp" android:scaleType="fitCenter" android:background="@drawable/shape_match_cell_bg" android:padding="3dp" />
                <ImageView android:id="@+id/rightCell_4_3" android:layout_width="40dp" android:layout_height="40dp" android:layout_margin="1dp" android:scaleType="fitCenter" android:background="@drawable/shape_match_cell_bg" android:padding="3dp" />
                <ImageView android:id="@+id/rightCell_4_4" android:layout_width="40dp" android:layout_height="40dp" android:layout_margin="1dp" android:scaleType="fitCenter" android:background="@drawable/shape_match_cell_bg" android:padding="3dp" />
