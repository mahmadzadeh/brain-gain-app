                <ImageView android:id="@+id/leftCell_3_4" android:layout_width="40dp" android:layout_height="40dp" android:layout_margin="1dp" android:scaleType="fitCenter" android:background="@drawable/shape_match_cell_bg" android:padding="3dp" />
                <ImageView android:id="@+id/leftCell_3_5" android:layout_width="40dp" android:layout_height="40dp" android:layout_margin="1dp" android:scaleType="fitCenter" android:background="@drawable/shape_match_cell_bg" android:padding="3dp" />

                <!-- Row 4 -->
                <ImageView android:id="@+id/leftCell_4_0" android:layout_width="40dp" android:layout_height="40dp" android:layout_margin="1dp" android:scaleType="fitCenter" android:background="@drawable/shape_match_cell_bg" android:padding="3dp" />
                <ImageView android:id="@+id/leftCell_4_1" android:layout_width="40dp" android:layout_height="40dp" android:layout_margin="1dp" android:scaleType="fitCenter" android:background="@drawable/shape_match_cell_bg" android:padding="3dp" />
