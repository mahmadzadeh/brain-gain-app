                <ImageView android:id="@+id/leftCell_1_1" android:layout_width="40dp" android:layout_height="40dp" android:layout_margin="1dp" android:scaleType="fitCenter" android:background="@drawable/shape_match_cell_bg" android:padding="3dp" />
                <ImageView android:id="@+id/leftCell_1_2" android:layout_width="40dp" android:layout_height="40dp" android:layout_margin="1dp" android:scaleType="fitCenter" android:background="@drawable/shape_match_cell_bg" android:padding="3dp" />
                <ImageView android:id="@+id/leftCell_1_3" android:layout_width="40dp" android:layout_height="40dp" android:layout_margin="1dp" android:scaleType="fitCenter" android:background="@drawable/shape_match_cell_bg" android:padding="3dp" />
                <ImageView android:id="@+id/leftCell_1_4" android:layout_width="40dp" android:layout_height="40dp" android:layout_margin="1dp" android:scaleType="fitCenter" android:background="@drawable/shape_match_cell_bg" android:padding="3dp" />
