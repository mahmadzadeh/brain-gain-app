<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/brain_gain_background"
    android:orientation="vertical"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:paddingTop="8dp"
    android:paddingBottom="16dp"
    android:gravity="center_horizontal">

    <!-- Header (icon + name) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingTop="6dp"
        android:paddingBottom="8dp">

        <ImageView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:contentDescription="@string/simon_says_title"
            android:src="@drawable/simonsays_icon"
            app:tint="@color/colorPrimaryDark" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:includeFontPadding="false"
            android:text="@string/simon_says_title"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="22sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Score / Lives / Level stat boxes -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <!-- Score -->
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:background="@drawable/dnb_stat_circle_bg"
            android:minHeight="78dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:paddingTop="10dp"
                android:paddingBottom="10dp">

                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:contentDescription="Score"
                    android:src="@drawable/trophy_icon"
                    app:tint="@color/colorPrimaryDark" />

                <TextView
                    android:id="@+id/scoreText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:includeFontPadding="false"
                    android:text="0"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </FrameLayout>

        <!-- Lives -->
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:background="@drawable/dnb_stat_circle_bg"
            android:minHeight="78dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:paddingTop="10dp"
                android:paddingBottom="10dp">

                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:contentDescription="Lives"
                    android:src="@drawable/heart_icon"
                    app:tint="@color/colorPrimaryDark" />

                <TextView
                    android:id="@+id/livesText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:includeFontPadding="false"
                    android:text="3"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </FrameLayout>

        <!-- Round -->
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/dnb_stat_circle_bg"
            android:minHeight="78dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:paddingTop="10dp"
                android:paddingBottom="10dp">

                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:contentDescription="Round"
                    android:src="@drawable/level_icon"
                    app:tint="@color/colorPrimaryDark" />

                <TextView
                    android:id="@+id/roundText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:includeFontPadding="false"
                    android:text="0"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </FrameLayout>

    </LinearLayout>

    <!-- Status text -->
    <TextView
        android:id="@+id/statusText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:text="Watch the sequence..."
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold" />

    <!-- 4x4 Tile Grid -->
    <GridLayout
        android:id="@+id/tileGrid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="4"
        android:rowCount="4"
        android:layout_gravity="center">

        <View android:id="@+id/tile_0"  style="@style/SimonSaysTile" />
        <View android:id="@+id/tile_1"  style="@style/SimonSaysTile" />
        <View android:id="@+id/tile_2"  style="@style/SimonSaysTile" />
        <View android:id="@+id/tile_3"  style="@style/SimonSaysTile" />
        <View android:id="@+id/tile_4"  style="@style/SimonSaysTile" />
        <View android:id="@+id/tile_5"  style="@style/SimonSaysTile" />
        <View android:id="@+id/tile_6"  style="@style/SimonSaysTile" />
        <View android:id="@+id/tile_7"  style="@style/SimonSaysTile" />
        <View android:id="@+id/tile_8"  style="@style/SimonSaysTile" />
        <View android:id="@+id/tile_9"  style="@style/SimonSaysTile" />
        <View android:id="@+id/tile_10" style="@style/SimonSaysTile" />
        <View android:id="@+id/tile_11" style="@style/SimonSaysTile" />
        <View android:id="@+id/tile_12" style="@style/SimonSaysTile" />
        <View android:id="@+id/tile_13" style="@style/SimonSaysTile" />
        <View android:id="@+id/tile_14" style="@style/SimonSaysTile" />
        <View android:id="@+id/tile_15" style="@style/SimonSaysTile" />
    </GridLayout>

</LinearLayout>
