<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layoutHolder"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/brain_gain_background">

    <!-- Left(80%) / Right(20%) split -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/rightPanelGuideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.80" />

    <!-- Top bar (shared) -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/topBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingStart="16dp"
        android:paddingTop="10dp"
        android:paddingEnd="16dp"
        android:paddingBottom="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/topLeftIcon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/brain_icon"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/colorPrimaryDark" />

        <TextView
            android:id="@+id/topTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Brain Gain - DnB"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="22sp"
            android:textStyle="bold"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/topMenuIcon"
            app:layout_constraintStart_toEndOf="@id/topLeftIcon"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/topMenuIcon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:contentDescription="Menu"
            app:srcCompat="@android:drawable/ic_menu_sort_by_size"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/colorPrimaryDark" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- ===== LEFT (main play area) ===== -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/left_layout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/rightPanelGuideline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/topBar">

        <!-- Vertical sizing: board area ~55%, gap ~17%, buttons ~28% -->
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/boardBottomGuideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.55" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/buttonsTopGuideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.72" />

        <!-- Board area (grid + feedback icons) -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/boardArea"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@id/matchButtonsRow"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <!-- Game board container -->
            <FrameLayout
                android:id="@+id/boardContainer"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="14dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="14dp"
                android:background="@drawable/nback_border"
                android:elevation="6dp"
                android:padding="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <!-- Keep existing GridLayout + ids -->
                <GridLayout
                    android:id="@+id/gridLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:columnCount="3"
                    android:rowCount="3">

                    <ImageView
                        android:id="@+id/image_00"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_row="0"
                        android:layout_rowWeight="1"
                        android:layout_column="0"
                        android:layout_columnWeight="1"
                        android:layout_marginRight="2dp"
                        android:layout_marginBottom="2dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/dnb_cell_off" />

                    <ImageView
                        android:id="@+id/image_01"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_row="0"
                        android:layout_rowWeight="1"
                        android:layout_column="1"
                        android:layout_columnWeight="1"
                        android:layout_marginRight="2dp"
                        android:layout_marginBottom="2dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/dnb_cell_off" />

                    <ImageView
                        android:id="@+id/image_02"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_row="0"
                        android:layout_rowWeight="1"
                        android:layout_column="2"
                        android:layout_columnWeight="1"
                        android:layout_marginBottom="2dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/dnb_cell_off" />

                    <ImageView
                        android:id="@+id/image_10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_row="1"
                        android:layout_rowWeight="1"
                        android:layout_column="0"
                        android:layout_columnWeight="1"
                        android:layout_marginRight="2dp"
                        android:layout_marginBottom="2dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/dnb_cell_off" />

                    <ImageView
                        android:id="@+id/image_11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_row="1"
                        android:layout_rowWeight="1"
                        android:layout_column="1"
                        android:layout_columnWeight="1"
                        android:layout_marginRight="2dp"
                        android:layout_marginBottom="2dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/dnb_cell_off" />

                    <ImageView
                        android:id="@+id/image_12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_row="1"
                        android:layout_rowWeight="1"
                        android:layout_column="2"
                        android:layout_columnWeight="1"
                        android:layout_marginBottom="2dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/dnb_cell_off" />

                    <ImageView
                        android:id="@+id/image_20"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_row="2"
                        android:layout_rowWeight="1"
                        android:layout_column="0"
                        android:layout_columnWeight="1"
                        android:layout_marginRight="2dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/dnb_cell_off" />

                    <ImageView
                        android:id="@+id/image_21"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_row="2"
                        android:layout_rowWeight="1"
                        android:layout_column="1"
                        android:layout_columnWeight="1"
                        android:layout_marginRight="2dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/dnb_cell_off" />

                    <ImageView
                        android:id="@+id/image_22"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_row="2"
                        android:layout_rowWeight="1"
                        android:layout_column="2"
                        android:layout_columnWeight="1"
                        android:cropToPadding="false"
                        android:scaleType="fitXY"
                        android:src="@drawable/dnb_cell_off" />
                </GridLayout>
            </FrameLayout>

            <!-- Feedback overlays (beside the board) -->
            <ImageView
                android:id="@+id/positionMatchFeedBackImg"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:alpha="0.8"
                android:elevation="10dp"
                android:src="@drawable/nback_transparent"
                app:layout_constrainedWidth="true"
                app:layout_constraintBottom_toBottomOf="@id/boardContainer"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintEnd_toStartOf="@id/boardContainer"
                app:layout_constraintHeight_percent="0.25"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/boardContainer"
                app:tint="@color/colorPrimaryDark" />

            <ImageView
                android:id="@+id/soundMatchFeedBackImg"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:alpha="0.8"
                android:elevation="10dp"
                android:src="@drawable/nback_transparent"
                app:layout_constrainedWidth="true"
                app:layout_constraintBottom_toBottomOf="@id/boardContainer"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHeight_percent="0.25"
                app:layout_constraintStart_toEndOf="@id/boardContainer"
                app:layout_constraintTop_toTopOf="@id/boardContainer"
                app:tint="@color/colorPrimaryDark" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Match buttons row -->
        <LinearLayout
            android:id="@+id/matchButtonsRow"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/boardArea">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="18dp"
                android:gravity="center"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/positionMatchButton"
                    android:layout_width="140dp"
                    android:layout_height="56dp"
                    android:background="@drawable/dnb_action_button_bg"
                    app:backgroundTint="@null"
                    android:contentDescription="@string/positionMatch"
                    android:padding="6dp"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/dnb_ic_location" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="Location"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="12sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/soundMatchButton"
                    android:layout_width="140dp"
                    android:layout_height="56dp"
                    android:background="@drawable/dnb_action_button_bg"
                    app:backgroundTint="@null"
                    android:contentDescription="@string/soundMatch"
                    android:padding="6dp"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/dnb_ic_music" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="Sound"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="12sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- ===== RIGHT (sidebar, 28%) ===== -->
    <LinearLayout
        android:id="@+id/rightLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#5E84B5"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/rightPanelGuideline"
        app:layout_constraintTop_toBottomOf="@id/topBar">

        <!-- left divider line -->
        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="#9BBEE0" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingBottom="0dp">

            <!-- Header (icon + name) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingStart="12dp"
                android:paddingTop="12dp"
                android:paddingEnd="12dp"
                android:paddingBottom="12dp">

                <ImageView
                    android:id="@+id/dnbHeaderIcon"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:contentDescription="Dual N Back"
                    android:src="@drawable/dual_n_back_main_icon"
                    app:tint="@color/colorPrimaryDark" />

                <TextView
                    android:id="@+id/textViewGameName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="Dual n\nBack"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="22sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#9BBEE0" />

            <!-- TIME oval -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:minHeight="84dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/dnb_stat_circle_bg"
                android:elevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp">

                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:contentDescription="Time"
                        android:src="@drawable/hour_glass"
                        app:tint="@color/colorPrimaryDark" />

                    <TextView
                        android:id="@+id/textViewCountDownTimer"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:autoSizeMaxTextSize="22sp"
                        android:autoSizeMinTextSize="14sp"
                        android:autoSizeStepGranularity="1sp"
                        android:autoSizeTextType="uniform"
                        android:gravity="center"
                        android:text="@string/_11_12"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="22sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </FrameLayout>

            <!-- SCORE oval -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:minHeight="84dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/dnb_stat_circle_bg"
                android:elevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:contentDescription="Score"
                        android:src="@drawable/trophy_icon"
                        app:tint="@color/colorPrimaryDark" />

                    <TextView
                        android:id="@+id/textViewScore"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:autoSizeMaxTextSize="22sp"
                        android:autoSizeMinTextSize="14sp"
                        android:autoSizeStepGranularity="1sp"
                        android:autoSizeTextType="uniform"
                        android:gravity="center"
                        android:text="@string/_0"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="22sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </FrameLayout>

        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
