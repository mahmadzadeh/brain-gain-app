<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Global palette gradient: light at top, darker at bottom -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="270"
                android:startColor="#9BBEE0"
                android:endColor="#5E84B5"
                android:type="linear" />
        </shape>
    </item>

    <!-- Subtle extra darkening at bottom to make the direction obvious -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="270"
                android:startColor="@android:color/transparent"
                android:endColor="@color/colorPrimaryDark"
                android:type="linear" />
        </shape>
    </item>

    <!-- Network mesh overlay used across the app -->
    <item android:drawable="@drawable/splash_network_pattern" />

    <!-- Fade the mesh out near the top so it "starts" lower on the screen -->
    <item android:height="220dp" android:gravity="top">
        <shape android:shape="rectangle">
            <gradient
                android:angle="270"
                android:startColor="#9BBEE0"
                android:endColor="@android:color/transparent"
                android:type="linear" />
        </shape>
    </item>

</layer-list>
