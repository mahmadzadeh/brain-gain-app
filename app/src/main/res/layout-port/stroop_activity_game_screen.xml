<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layoutHolder"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/brain_gain_background"
    android:padding="14dp">

    <!-- Header (icon + name) -->
    <LinearLayout
        android:id="@+id/topHeader"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/stroopHeaderIcon"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:contentDescription="Stroop"
            android:src="@drawable/stroop_icon"
            app:tint="@color/colorPrimaryDark" />

        <TextView
            android:id="@+id/textViewGameName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:includeFontPadding="false"
            android:text="Stroop"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>

    <!-- Score + timer row -->
    <LinearLayout
        android:id="@+id/statsRow"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/topHeader">

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="92dp"
            android:layout_weight="1"
            android:layout_marginEnd="10dp"
            android:background="@drawable/dnb_stat_circle_bg"
            android:elevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="6dp"
                    android:contentDescription="Score"
                    android:src="@drawable/trophy_icon" />

                <TextView
                    android:id="@+id/textViewScore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="22sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="92dp"
            android:layout_weight="1"
            android:layout_marginStart="10dp"
            android:background="@drawable/dnb_stat_circle_bg"
            android:elevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:paddingTop="8dp"
                android:paddingBottom="8dp">

                <ImageView
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:contentDescription="Time"
                    android:src="@drawable/hour_glass"
                    app:tint="@color/colorPrimaryDark" />

                <TextView
                    android:id="@+id/textViewCountDownTImer"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="11:12"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="22sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </FrameLayout>

    </LinearLayout>

    <!-- Text display area -->
    <FrameLayout
        android:id="@+id/textDisplayArea"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="14dp"
        android:layout_marginBottom="14dp"
        app:layout_constraintBottom_toTopOf="@id/buttonRow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/statsRow">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:background="@drawable/stroop_text_box_bg"
            android:elevation="4dp"
            android:padding="24dp">

            <TextView
                android:id="@+id/textViewGameText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="TEXT"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="48sp"
                android:textStyle="bold|italic" />
        </FrameLayout>

    </FrameLayout>

    <!-- Buttons row -->
    <LinearLayout
        android:id="@+id/buttonRow"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginBottom="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="10dp"
            android:gravity="center"
            android:orientation="vertical">

            <FrameLayout
                android:id="@+id/leftButton"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@drawable/stroop_roundbutton"
                android:clickable="true"
                android:focusable="true"
                android:contentDescription="Left Color Button">

                <TextView
                    android:id="@+id/leftButtonText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="RED"
                    android:textColor="#FF0000"
                    android:textSize="16sp"
                    android:textStyle="bold|italic" />
            </FrameLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="10dp"
            android:gravity="center"
            android:orientation="vertical">

            <FrameLayout
                android:id="@+id/rightButton"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@drawable/stroop_roundbutton"
                android:clickable="true"
                android:focusable="true"
                android:contentDescription="Right Color Button">

                <TextView
                    android:id="@+id/rightButtonText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="BLUE"
                    android:textColor="#16A3F1"
                    android:textSize="16sp"
                    android:textStyle="bold|italic" />
            </FrameLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
